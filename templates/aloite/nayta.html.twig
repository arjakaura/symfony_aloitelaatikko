{% extends 'base.html.twig' %}
{% block title %}Aloite{% endblock %}


{% block body %}

    <h1>Aloitteen tiedot</h1>
    <table class="table table-hover">
    <thead>
    <tr>
      <th>ID</th>
      <th>Aihe</th>
      <th>Kuvaus</th>
      <th>kirjauspaiva</th>
      <th>Nimi</th>
      <th>Sahkoposti</th>
      <th>Toiminnot</th>
    </tr>
  </thead>
  <tbody>
     
    <tr>
      <th>{{ aloite.id }}</th>
      <td>{{ aloite.aihe }}</td>
      <td>{{ aloite.kuvaus }}</td>
      <td>{{ aloite.kirjauspaiva |date('Y-m-d') }}</td>
      <td>{{ aloite.nimi }}</td>
      <td>{{ aloite.sahkoposti }}</td>
      <td>         
       
       <button poista-aloite="{{ aloite.id }}" class="btn btn-danger poista-aloite">Poista</button>   
       <a href="{{ path('aloite_muokkaa', {id: aloite.id}) }}" class="btn btn-success">Muokkaa</a>
     </td>
    </tr>

      
  </tbody>
  

</table>
 
{% endblock %}

{% block javascripts %}
  {{ parent() }}
    <script src="../../js/main.js"></script>
{% endblock %}
 