{% extends 'base.html.twig' %}
{% block title %}Aloitelista{% endblock %}


{% block body %}

    <h1>Aloitteet</h1>
    <table class="table table-hover">
    <thead>
    <tr>
      <th>ID</th>
      <th>Aihe</th>
      <th>Kuvaus</th>
      <th>Kirjauspaiva</th>
      <th>Nimi</th>
      <th>Sahkoposti</th>
      <th>Toiminnot</th>
    </tr>
  </thead>
  <tbody>
    {% for aloite in aloitteet %}
    <tr>
      <th>{{ aloite.id }}</th>
      <td>{{ aloite.aihe }}</td>
      <td>{{ aloite.kuvaus }}</td>
      <td>{{ aloite.kirjauspaiva |date('Y-m-d') }}</td>
      <td>{{ aloite.nimi }}</td>
      <td>{{ aloite.sahkoposti }}</td>
      <td>
       <a href="{{ path('aloite_nayta', {id: aloite.id}) }}" class="btn btn-dark">Nayta</a>
       <a href="{{ path('aloite_muokkaa', {id: aloite.id}) }}" class="btn btn-success">Muokkaa</a>
       <button poista-aloite="{{ aloite.id }}" class="btn btn-danger poista-aloite">Poista</button>
     </td>
    </tr>

   {% endfor %}    
  </tbody>
  

</table>
  
{% endblock %}

{% block javascripts %}
  {{ parent() }}
    <script src="js/main.js"></script>
{% endblock %}
